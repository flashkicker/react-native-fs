{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "types": ["node"],
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "DOM", "ES2018"],
    "skipLibCheck": true
  },
  "include": ["src", "types"]
}
